{% extends '::base.html.twig' %}

{% block body %}
    {% for post in posts %}
        <div class="post">
            <div class="core-post">
                <p class="post-time">{{ post.createdAt.format('d-m-Y H:i:s') }}</p>
                <p class="post-content">{{ post.content }}</p>
                <p class="post-author">{{ post.author.login }}</p>
                <p class="post-comment"><a href="{{ path('hanky_paplek_comment', {'id': post.id }) }}">Skomentuj</a></p>
            </div>
            <div>
                {% for comment in post.comments %}
                    <div class="comment">
                        <p class="comment-content">{{ comment.content }}</p>
                        <p class="comment-author">{{ comment.author.login }}</p>
                        <p class="comment-time">{{ comment.author.createdAt.format('d-m-Y H:i:s') }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
{% endblock %}
