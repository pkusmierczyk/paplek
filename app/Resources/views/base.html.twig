<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Uważaj, żeby nic nie wypaplać!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/main.css') }}" rel="stylesheet" type="text/css" />
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery2.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block header %}
            <div class="header-logo">
                <span class="logo">Paplek</span><br/>
                <span class="motto">Uważaj, żeby nic nie wypaplać!</span>
            </div>
            {% if isLogged %}
                <div class="header">
                    <div><a href="{{ path('hanky_paplek_logout') }}">Wyloguj</a></div>
                    <div><a href="{{ path('hanky_paplek_post') }}">Napisz post</a></div>
                    <div><a href="{{ path('hanky_paplek_homepage') }}">Strona główna</a></div>
                </div>
            {% else %}
                <div class="header">
                    <div><a href="{{ path('hanky_paplek_login') }}">Zaloguj</a></div>
                    <div><a href="{{ path('hanky_paplek_register') }}">Zarejestruj się</a></div>
                    <div><a href="{{ path('hanky_paplek_homepage') }}">Strona główna</a></div>
                </div>
            {% endif %}
        {% endblock %}
        <div class="content">{% block body %}{% endblock %}</div>
        <div class="footer">
            autor: Piotr Kuśmierczyk
        </div>
    </body>
</html>
